// this function prints its arguments and exits with 0 if the print was successful
func main hello_world_main(num firstArg, char## argv) --> <num exitnum> {
	var std:streamWrite write; // use argc/firstArg as boolean
	var std:strLen strLen;
	write:id <-- std:out;
	argv <-- argv + 1;
	while (argv#) {
		if (firstArg) {
			firstArg <-- 0;
		} else {
			write:len <-- 1;
			write:data <-- " ";
			call std:streamWrite write;
		}
		strLen:str <-- argv#;
		call std:strLen strLen;
		write:len <-- strLen:len;
		write:data <-- argv#;
		call std:streamWrite write;
		argv <-- argv + 1;
	}
	write:data <-- "\n";
	write:len <-- 1;
	call std:streamWrite write;
	asm ::
			JMPERR SOME_ERROR
			XOR X00, X00
			JMP END
		@SOME_ERROR
			MOV X00, 1
		@END
	>> X00 --> exitnum ;
}
