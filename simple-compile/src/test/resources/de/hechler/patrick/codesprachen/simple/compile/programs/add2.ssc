// this function prints 5 + 4 = 9 and exits with 0
func main add_main(num argc, char## argv) --> <num exitnum> {
	var num a <-- 5;
	var num b <-- 4;
	var num c <-- a + b;
	var char[64] myBufA;
	var num lenA;
	var char[64] myBufB;
	var num lenB;
	var char[64] myBufC;
	var num lenC;
	var std:strFromNum strFromNumArg;
	strFromNumArg:val <-- a;
	strFromNumArg:buf <-- myBufA;
	strFromNumArg:base <-- 10;
	strFromNumArg:bufLen <-- 64;
	call std:strFromNum strFromNumArg;
	lenA <-- strFromNumArg:strLen;
	strFromNumArg:val <-- b; // assume that all buffers are large enough
	strFromNumArg:buf <-- myBufB;
	call std:strFromNum strFromNumArg;
	lenB <-- strFromNumArg:strLen;
	strFromNumArg:val <-- c;
	strFromNumArg:buf <-- myBufC;
	call std:strFromNum strFromNumArg;
	lenC <-- strFromNumArg:strLen;
	var std:streamWrite writeArg;
	writeArg:id <-- std:out;
	writeArg:len <-- lenA;
	writeArg:data <-- myBufA;
	call std:streamWrite writeArg;
	writeArg:len <-- 3;
	writeArg:data <-- " + ";
	call std:streamWrite writeArg;
	writeArg:len <-- lenB;
	writeArg:data <-- myBufB;
	call std:streamWrite writeArg;
	writeArg:len <-- 3;
	writeArg:data <-- " = ";
	call std:streamWrite writeArg;
	writeArg:len <-- lenC;
	writeArg:data <-- myBufC;
	call std:streamWrite writeArg;
	writeArg:len <-- 1;
	writeArg:data <-- "\n";
	call std:streamWrite writeArg;
	exitnum <-- 0;
}
